{
  "extends": "./tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/.bundle",
    "**/.classpath",
    "**/.factorypath",
    "**/.github",
    "**/.husky",
    "**/.log",
    "**/.project",
    "**/.settings",
    "**/.yarn",
    "**/*.cjs",
    "**/*.map",
    "**/*.min.js",
    "**/bin",
    "**/build",
    "**/dist",
    "**/misc",
    "**/node_modules",
    "**/Pods",
    "**/vendor/bundle",
    ".prettierrc.js",
    "babel.config.js",
    "changelog.config.js",
    "commitlint.config.js",
    "commitlint.shared.js",
    "jest.config.js",
    "metro.config.js"
